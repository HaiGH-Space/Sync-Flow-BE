generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String               @id @default(uuid())
  name                String
  email               String               @unique
  emailVerified       Boolean              @default(false) @map("email_verified")
  image               String?
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")
  accounts            Account[]
  sessions            Session[]
  workspaceMembers    WorkspaceMember[]
  comments            Comment[]
  meetingParticipants MeetingParticipant[]
  issues              Issue[]

  @@map("users")
}

model Account {
  id                   String    @id @default(uuid())
  userId               String    @map("user_id")
  accountId            String    @map("account_id")
  providerId           String    @map("provider_id")
  password             String?
  accessToken          String?   @map("access_token")
  refreshToken         String?   @map("refresh_token")
  accessTokenExpiresAt DateTime? @map("access_token_expires_at")
  idToken              String?   @map("id_token")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@unique([identifier, value])
  @@map("verifications")
}

model Workspace {
  id        String            @id @default(uuid())
  name      String
  urlSlug   String            @unique @map("url_slug")// EX: sync-flow.com/workspace-name
  ownerId   String            @map("owner_id")
  members   WorkspaceMember[]
  projects  Project[]
  createdAt DateTime          @default(now()) @map("created_at")
  updatedAt DateTime          @updatedAt @map("updated_at")
  // Index owner for faster lookups of workspaces by owner
  @@index([ownerId])

  @@map("workspaces")
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  workspaceId String    @map("workspace_id")
  userId      String    @map("user_id")
  role        Role      @default(MEMBER) // ADMIN, MEMBER, GUEST
  joinedAt    DateTime  @default(now()) @map("joined_at")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  // Index for faster lookups list of workspace members by user
  @@index([userId])

  @@map("workspace_members")
}

model Project {
  id          String    @id @default(uuid())
  name        String
  key         String // EX: SF (for tasks SF-1, SF-2)
  description String?
  workspaceId String    @map("workspace_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  issues      Issue[]
  columns     Column[] // Status columns (To Do, Done...)

  @@unique([workspaceId, key])

  @@map("projects")
}

model Column {
  id        String  @id @default(uuid())
  name      String // "To Do", "In Progress"
  order     Int //  1, 2, 3
  projectId String  @map("project_id")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues    Issue[]

  // Index for faster lookups of columns by project
  @@index([projectId, order])
  @@map("columns")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  issueId   String   @map("issue_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([issueId, createdAt])

  @@map("comments")
}

model Meeting {
  id      String  @id @default(uuid())
  title   String? // (Optional) Meeting title
  issueId String? @map("issue_id") // (Contextual Call)
  startedAt    DateTime             @default(now()) @map("started_at")
  endedAt      DateTime?            @map("ended_at")

  participants MeetingParticipant[]
  issue Issue? @relation(fields: [issueId], references: [id], onDelete: SetNull)

  @@index([issueId])

  @@map("meetings")
}

model MeetingParticipant {
  id        String  @id @default(uuid())
  meetingId String  @map("meeting_id")
  userId    String  @map("user_id")
  joinedAt  DateTime @default(now()) @map("joined_at")

  meeting   Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  // --- INDEXES ---
  // Ensures a user cannot join the same meeting twice.
  // Also serves as the primary index for fetching participants of a specific meeting.
  @@unique([meetingId, userId])

  // Optimizes reverse lookups (finding meetings a specific user joined).
  // Also improves performance for cascade deletes when a User is removed.
  @@index([userId])
  @@map("meeting_participants")
}

model Issue {
  id          String   @id @default(uuid())
  number      Int // auto-incrementing per project
  title       String
  description String?  @db.Text
  priority    Priority @default(MEDIUM) // LOW, MEDIUM, HIGH
  order       Int // order in the column

  columnId String @map("column_id")
  column   Column @relation(fields: [columnId], references: [id], onDelete: Cascade)

  projectId String  @map("project_id")
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  assigneeId String? @map("assignee_id")
  assignee   User?   @relation(fields: [assigneeId], references: [id], onDelete: SetNull)

  comments Comment[]
  meetings Meeting[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // --- INDEXES ---
  // Enforces unique issue numbers within a project.
  // Also acts as an index for querying issues by projectId (Leftmost prefix rule).
  @@unique([projectId, number])

  // Optimizes loading issues for a column and sorting them by order (Kanban view).
  // Replaces the need for a standalone index on columnId.
  @@index([columnId, order])

  // Optimizes filtering tasks by assignee (e.g., "My Tasks" view).
  @@index([assigneeId])
  @@map("issues")
}

// Enums
enum Role {
  ADMIN
  MEMBER
  GUEST
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
